generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String
  clerkId   String    @unique()
  image     String
  credits   Int       @default(10)
  createdAt DateTime  @default(now())
  summaries Summary[]

  @@index([clerkId])
}

model Summary {
  id        String @id @default(uuid())
  name      String
  url       String
  shortDesc String
  content   String
  userId    String
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
}
